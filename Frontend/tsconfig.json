{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "bundler", // Для Vite, или "node" для CRA
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["src/**/*", "declarations.d.ts"],
  "exclude": ["node_modules", "dist"]
}